<Window x:Class="StatystykaSorzedarzy.WindowInput"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:StatystykaSorzedarzy"
        mc:Ignorable="d"
        Title="WindowInput" Height="450" Width="800">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="80"></RowDefinition>
            <RowDefinition Height="80"></RowDefinition>
            <RowDefinition Height="80"></RowDefinition>
            <RowDefinition Height="*"></RowDefinition>
        </Grid.RowDefinitions>
        <Grid>
            <Label Name="calPrzychod" Content="Calkowite przychody:"  HorizontalAlignment="Center" VerticalAlignment="Center" Height="60" Width="500" FontSize="24" Grid.Row="0"/>
        </Grid>
        <Label Name="sredniaCena" Content="Srednia cena produktu:"  HorizontalAlignment="Center" VerticalAlignment="Center" Height="60" Width="500" FontSize="24" Grid.Row="1"/>
        <Label Name="najProd"  Content="Produkt najczesciej sprzedawany:"  HorizontalAlignment="Center" VerticalAlignment="Center" Height="60" Width="500" FontSize="24" Grid.Row="2"/>
        <Button Content="Wróć" HorizontalAlignment="Center"  Grid.Row="3" VerticalAlignment="Center" Height="60" Width="288" Click="Button_Click" BorderThickness="3,3,3,3" ClipToBounds="True" Background="#FFE42626" BorderBrush="#FF9E2727" Foreground="White" FontSize="24" RenderTransformOrigin="0.5,0.5">
            <Button.Effect>
                <DropShadowEffect/>
            </Button.Effect>
        </Button>
    </Grid>
</Window>
