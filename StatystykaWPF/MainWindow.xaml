<Window x:Class="Zadanie2Statystyka.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Zadanie2Statystyka"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="400"></ColumnDefinition>
            <ColumnDefinition Width="*"></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="80"></RowDefinition>
            <RowDefinition Height="*"></RowDefinition>
            <RowDefinition Height="80"></RowDefinition>
        </Grid.RowDefinitions>
        <Label Content="Lista produktow i ich sprzedazy: " VerticalAlignment="Center" Height="60" Width="380" FontSize="22" HorizontalContentAlignment="Center" VerticalContentAlignment="Center"/>
        <DataGrid Name="dgProdukty" Grid.Row="1" d:ItemsSource="{d:SampleData ItemCount=5}"/>
        <Button Name="btnWyswietl" Grid.Column="1" Content="Wyswietl" HorizontalAlignment="Right" Margin="0,0,40,0" VerticalAlignment="Center" Width="100" Height="36" FontSize="14" Click="btnWyswietl_Click"/>
        <Label Grid.Column="1" Content="Statystyka: " HorizontalAlignment="Left" Margin="40,0,0,0" VerticalAlignment="Center" Height="36" Width="190" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" FontSize="22"/>
        <DataGrid x:Name="dgStatystyka" Grid.Column="1" Grid.Row="1" d:ItemsSource="{d:SampleData ItemCount=5}"/>
        <Button x:Name="btnZapisz" Grid.Column="1" Content="Zapisz Raport" HorizontalAlignment="Center" Grid.Row="2" VerticalAlignment="Center" Height="40" Width="160" FontSize="16" Click="btnZapisz_Click"/>
    </Grid>
</Window>
