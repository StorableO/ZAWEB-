<Window x:Class="Zadanie1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Zadanie1"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="360"></ColumnDefinition>
            <ColumnDefinition Width="*"></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="80"></RowDefinition>
            <RowDefinition Height="230"></RowDefinition>
            <RowDefinition Height="40"></RowDefinition>
            <RowDefinition Height="40"></RowDefinition>
            <RowDefinition Height="40"></RowDefinition>
        </Grid.RowDefinitions>
        <Label Content="Lista Ksiazek: " HorizontalAlignment="Center" VerticalAlignment="Center" Height="60" Width="340" />
        <DataGrid x:Name="dgWypozyczenia" Grid.Column="1" Grid.Row="1" d:ItemsSource="{d:SampleData ItemCount=5}" SelectionChanged="dgWypozyczenia_SelectionChanged"/>
        <DataGrid x:Name="dgKsiazki" Grid.Column="0" Grid.Row="1" d:ItemsSource="{d:SampleData ItemCount=5}" SelectionChanged="dgKsiazki_SelectionChanged"/>

        <Button x:Name="btnDodaj" Content="Dodaj" HorizontalAlignment="Left" Margin="299,0,0,0" Grid.Row="2" VerticalAlignment="Center" Height="20" Width="51" Click="btnDodaj_Click"/>
        <TextBox Name="tbIsbn" HorizontalAlignment="Left" Margin="10,0,0,0" Grid.Row="2" TextWrapping="Wrap" Text="Isbn:" VerticalAlignment="Center" Width="80"/>
        <TextBox Name="tbImie" HorizontalAlignment="Left" Margin="100,0,0,0" Grid.Row="2" TextWrapping="Wrap" Text="Nazwisko" VerticalAlignment="Center" Width="80"/>
        <DatePicker Name="dpData" HorizontalAlignment="Left" Margin="190,0,0,0" Grid.Row="2" VerticalAlignment="Center" Width="100"/>

        <TextBox x:Name="txFilter" HorizontalAlignment="Left" Margin="125,0,0,0" Grid.Row="3" TextWrapping="Wrap" Text="Nazwisko" VerticalAlignment="Center" Width="120"/>
        <Button Name="btnFilter" Content="Wyswietl" HorizontalAlignment="Left" Margin="260,0,0,0" Grid.Row="3" VerticalAlignment="Center" Width="64" Click="btnFilter_Click"/>
        <Label Grid.Column="0" Content="Nazwisko:" HorizontalAlignment="Left" Margin="10,6,0,0" Grid.Row="3" VerticalAlignment="Top" Height="40" Width="110" Grid.RowSpan="2"/>

        <TextBox Name="txUsuwanie" HorizontalAlignment="Left" Margin="125,0,0,0" Grid.Row="4" TextWrapping="Wrap" Text="id" VerticalAlignment="Center" Width="120"/>
        <Button x:Name="btnUsuwanie" Content="Usun" HorizontalAlignment="Left" Margin="260,0,0,0" Grid.Row="4" VerticalAlignment="Center" Width="90" Click="btnUsuwanie_Click"/>
        <Label Grid.Column="0" Content="Id:" HorizontalAlignment="Left" Margin="10,6,0,0" Grid.Row="4" VerticalAlignment="Top" Height="40" Width="110"/>

        <Label Grid.Column="1" Content="Lista wyporzyczen: " HorizontalAlignment="Center" VerticalAlignment="Center" Height="60" Width="420"/>
        <Label Name="lbLiczba" Grid.Column="1" Content="Liczba wszystkich wyporzyczen: " HorizontalAlignment="Center" Grid.Row="2" VerticalAlignment="Center" Height="40" Width="420" />
        <Button x:Name="btnReset" Content="↶" Margin="329,0,10,0" Grid.Row="3" VerticalAlignment="Center" Height="20" Click="btnReset_Click"/>




    </Grid>
</Window>
